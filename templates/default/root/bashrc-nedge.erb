echo 167772160 > /proc/sys/net/core/rmem_default
echo 167772160 > /proc/sys/net/core/rmem_max
echo 167772160 > /proc/sys/net/core/wmem_default
echo 167772160 > /proc/sys/net/core/wmem_max

source /opt/nedge/env.sh
echo "env.sh sourced in .bashrc-nedge"