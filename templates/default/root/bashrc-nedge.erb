
# nedge shortcuts

alias r="/opt/nedge/src/nmf/nefclient procman restartWorker '{ name: \"ccowgw\" }'"
alias r_rest="/opt/nedge/src/nmf/nefclient procman restartWorker '{ name: \"rest\" }'"
alias r_serv="/opt/nedge/src/nmf/nefclient procman restartWorker '{ name: \"ccowserv\" }'"
alias r_iodocs="/opt/nedge/src/nmf/nefclient procman restartWorker '{ name: \"iodocs\" }'"
