alias k="/opt/nedge/scripts/dev/gw-kill.sh"

alias check="ps aux | grep ccow && ps aux | grep lt"

alias gw_check="/opt/nedge/scripts/dev/gw-check"
alias gw_start="rm -rf /data/*//{*,.*} && /opt/nedge/src/ccow/test/cluster_test ; cd /opt/nedge/src/nmf && CCOW_LOG_LEVEL=4 CCOW_LOG_STDOUT=1 ./nefstart -a"
